<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blueangles.instagramclone">

    <!-- Include following permission if you load images from Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Include following permission if you want to cache images on SD card -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.Home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Search.SearchActivity" />
        <activity android:name=".Activities.Share.ShareActivity" />
        <activity android:name=".Activities.Likes.LikesActivity" />
        <activity android:name=".Activities.Profile.ProfileActivity" />
        <activity android:name=".Activities.Profile.AccountSettingsActivity" />
        <activity android:name=".Activities.Login.LoginActivity" />
        <activity android:name=".Activities.Login.RegisterActivity" />
        <activity android:name=".Activities.Share.NextActivity" />
    </application>

</manifest>